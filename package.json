{
  "name": "@snapback/events",
  "version": "0.1.2",
  "description": "Type-safe event bus for building reactive TypeScript applications - powered by EventEmitter2 with full async/await support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Marcelle-Labs/snapback.dev.git",
    "directory": "packages-oss/events"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && tsc --build",
    "check": "biome check .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@snapback/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
